/**
 *  Callbact that generate the modal form using a multistep form
 */
function ctools_examples_multistep_form_modal_callback($js = NULL, $step = NULL) {
  //if there's no js
  if (!$js) {
    return drupal_get_form('ctools_examples_ctools_multistep_form');
  }

  ctools_include('modal');
  ctools_include('ajax');

  //Define multistep wizard
  $form_info = array(
    'id' => 'ctools_examples',
    'path' => 'ctools_examples/multistep-form-modal/' . ($js ? 'ajax' : 'nojs') . '%step',
    'show trail' => TRUE,
    'show back' => TRUE,
    'show cancel' => TRUE,
    'show return' => TRUE,
    'next callback' => 'ctools_examples_form_next',
    'finish callback' => 'ctools_examples_form_finish',
    'cancel callback' => 'ctools_examples_form_cancel',
    //Now the order!!
    'order' => array(
      'start' => array(
        'form_id' => 'ctools_examples_ctools_multistep_form_start',
      ),
      'second' => array(
        'form_id' => 'ctools_examples_ctools_multistep_form_second',
      ),
      'third' => array(
        'form_id' => 'ctools_examples_ctools_multistep_form_third',
      ),
      'last' => array(
        'form_id' => 'ctools_examples_ctools_multistep_form_last',
      ),
    ),
  );

  $object_id = 'ctools_examples';
  if (empty($step)) {
    //test_ajax_sample_cache_clear($object_id);
    $step = 'start';
  }

  //$object = test_ajax_sample_cache_get($object_id);
  //Define $form_state varibale
  $form_state = array(
    'ajax' => $js,
      //'object_id' => $object_id,
      // 'object' => $object,
  );

  ctools_include('wizard');

  $form = ctools_wizard_multistep_form($form_info, $step, $form_sate);
  $output = drupal_render($form);

  //Response to any posible action (cancel, finish and continious)
  if ($js) {
    $commands = array();
    if ($output == FALSE || !empty($form_state['finish'])) {
      //@fran understand this section and change the class.
      //$commands[] = ajax_command_html('#ctools-sample', finish($form_state['object']));
      $commands[] = ctools_modal_command_dismiss();
    }
    else if (!empty($form_state['cancel'])) {
      $commands[] = ctools_modal_command_dismiss();
    }
    else {
      $commands = ctools_modal_form_render($form_state, $output);
    }
  }

  print ajax_render($commands);
  exit();
}

